<!-- /templates/customers/login.liquid -->

<div class="container py-5 my-5">
    <div class="login-form">
        <h2>Login</h2>
        {% form 'customer_login' %}

        {% include 'form-error', form: form %}

        <label for="customer_email">Email Address</label>
        <input type="email" name="customer[email]" class="form-control rounded-0 my-2" />

        <label for="customer_password">Password</label>
        <input type="password" name="customer[password]" class="form-control rounded-0 my-2"/>

        <input class="btn btn-primary btn-lg w-100 rounded-0" type="submit" value="Sign In" />

        {% endform %}

        <a href="#recover" id="forgotPassword" class="text-center">
            Forgot your password?
        </a>
    </div>

    <div id="forgot_password_form" class="forgot-password-form d-none mt-5">
        {% form 'recover_customer_password' %}
            {% include 'form-error', form: form %}
            <div class="col-12 mb-2">
                <label for="resetPassword" class="form-label">Email Address</label>
                <input type="email" name="email" id="resetPassword" class="form-control">
            </div>

            <input type="submit" value="Reset Password" class="btn btn-primary btn-lg w-100 rounded-0">
        {% endform %}
    </div>

</div>

